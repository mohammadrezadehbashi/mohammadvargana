@using DataLayer
@model IEnumerable<DataLayer.ViewModel.CompareItem>
@{
    ViewBag.Title = "Index";
}

<h2>لیست مقایسه</h2>
<hr />
@if (Model.Any())
{
<table class="table table-bordered">
    <tr>
        <td>تصویر</td>
        @foreach (var item in Model)
        {
            <td>
                <img style="width:100px;height:100px" class="thumbnail" src="~/Images/Productimages/Thumb/@item.ImageName"/>
            </td>
        }
    </tr>
    <tr>
        <td>فرآورده</td>
        @foreach (var item in Model)
        {
            <td>
                @item.Title
            </td>
        }
    </tr>
    @{
        List<Features> listFeatures = ViewBag.features as List<Features>;
        List<Product_Features> productFeatures=ViewBag.productFeatures as List<Product_Features>;
    }
    @foreach(var item in listFeatures)
    {
        <tr>
            <td>
                @item.FeatureTitle
            </td>
            @foreach(var feature in Model)
            {
                <td>
                    @string.Join("-", productFeatures.Where(f => f.ProductID == feature.ProductID && f.FeatureID == item.FeatureID).Select(f => f.Value).ToList());
                </td>
            }
        </tr>
    }
</table>
}
